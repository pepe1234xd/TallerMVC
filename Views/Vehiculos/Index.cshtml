@model IEnumerable<vehiculos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tus vehiculos: </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="vehiculos" asp-action="Register" class="btn btn-primary">
                <i class="bg bi-plus-circle"></i>&nbsp; Agregar nuevo vehiculo
            </a>
        </div>
    </div>
</div>
<br>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Marca
            </th>
            <th>
                Modelo
            </th>
            <th>
                placas
            </th>
            <th>
                seleccionar
            </th>
            <th> 
                Editar
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ob in Model)
        {
            <tr>
                <td width="20%">
                    @ob.marca
                </td>
                <td width="20%">
                    @ob.modelo
                </td>
                <td width="20%">
                    @ob.placas
                </td>
                <td width="20%">
                    <a class="btn btn-primary mx-2" asp-controller="vehiculos" asp-action="Seleccionar" asp-route-id="@ob.id">
                        Seleccionar
                    </a>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="vehiculos" asp-action="Editar" asp-route-id="@ob.id">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a class="btn btn-danger mx-2" asp-controller="vehiculos" asp-action="Borrar" asp-route-id="@ob.id">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


